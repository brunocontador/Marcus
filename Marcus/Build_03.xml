<project name="Teste" default="main" basedir=".">	
	<property name="source.dir" location="src" />
	<property name="build.dir" location="bin" />
	<property name="doc.dir" location="doc" />
	<property name="jar.dir" location="jar" />
	<property name="teste.dir" location="teste" />
	
	<path id="junit.class.path">
		<pathelement location="/home/aluno/eclipse-workspace/Marcus/junit-4.13-beta-3.jar" />
		<pathelement location="/home/aluno/eclipse-workspace/Marcus/hamcrest-core-1.3.jar"/>
		<pathelement location ="${build.dir}" />
	</path>
	
	<target name="clean" description="tidy up the workspace">
	<delete dir="${build.dir}" />
	<delete dir="${doc.dir}" />
	<delete dir="${jar.dir}" />
	</target>
	
	<target name="init" description="setup project directories">
	<mkdir dir="${build.dir}" />
	<mkdir dir="${doc.dir}" />
	<mkdir dir="${jar.dir}" />
	<mkdir dir="${teste.dir}" />
	</target>
	
	<target name="compile" description="compile java sources">
	<javac srcdir="${source.dir}" destdir="${build.dir}" includeantruntime="false" >
		<classpath refid="junit.class.path" />
		</javac>
	</target>
	
	 <target name="doc" depends="init" description="generate documentation">
	 	<javadoc sourcepath="${source.dir}" destdir="${doc.dir}">
	 		<classpath refid="junit.class.path" />
	 	</javadoc>
	  </target>
	  
	 <target name ="jar">
	 <jar basedir="${build.dir}" destfile="jar/aplicacao.jar" />
	 </target>
		
	<target name="main" depends="clean, init, compile, doc, jar, teste" >
	</target>
	
	<taskdef name="junit"
    classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
    <classpath refid="junit.class.path" />
</taskdef>

<target name="teste">
    <junit>
        <classpath refid="junit.class.path" />
        <formatter type="brief" usefile="false" />
        <test name="${ValoresTest.java}" haltonfailure="no" outfile="result">
         <formatter type="xml" />
        </test>
          <batchtest  todir="${reports.tests}" >
            <fileset dir="${teste.dir}">
              <include name="*/*Test.java"/>
            </fileset>
          </batchtest>

    </junit>
    <copy file="result.xml" todir="../src/ant" />
    
</target>
	
</project>